{% include("header.twig") with{'siteTitulo': siteTitulo, 'active' : 'user' } %}
<div class="content">
  <div class="container-fluid">
     	<div class="row">
             <div class="col-md-12">
                 <div class="card">
                     <div class="header">
                         <h4 class="title">
                         	Usuários
                         	<a href="/usuarios/adicionar" class="btn btn-default pull-right">+ Add</a>
                        	</h4>
                         <p class="category">6 usuários cadastrados
                     </div>
                     <div class="content table-resptable-full-width">
                         <table class="table table-hover table-striped">
                             <thead>
                                 <th>ID</th>
                             	<th>Nome</th>
                             	<th>Email</th>
                             	<th>Cidade</th>
                             	<th>Função</th>
                                <th></th>
                             </thead>
                             <tbody>
                                {% for usuario in usuarios %}
                                 <tr>
                                 	<td>{{usuario.id}}</td>
                                 	<td>{{usuario.nome}}</td>
                                 	<td>{{usuario.email}}</td>
                                 	<td>{{usuario.cidade}}</td>
                                 	<td>{{usuario.funcao}}</td>
                                    <td class="td-actions text-right">
                                         <a href="/usuarios/editar/{{usuario.id}}" class="btn btn-info btn-simple btn-xs">
                                             <i class="fa fa-edit"></i>
                                         </a>
                                         <a href="/usuarios/excluir/{{usuario.id}}" class="btn btn-danger btn-simple btn-xs">
                                             <i class="fa fa-times"></i>
                                         </a>
                                     </td>
                                 </tr>
                                 {% endfor %}
                             </tbody>
                         </table>
                     </div>
                 </div>
             </div>
     </div>
   </div>
</div>
{% include("footer.twig") %}